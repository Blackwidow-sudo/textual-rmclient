Button {
    width: 100%;
}

IssueModal,
QuitModal {
    align: center middle;
}

#dialog {
    background: $surface;
    border: thick $background 80%;
    grid-gutter: 1 2;
    grid-rows: 1fr 3;
    grid-size: 2;
    height: 11;
    padding: 0 1;
    width: 60;
}

#issue,
#question {
    column-span: 2;
    content-align: center middle;
    height: 1fr;
    width: 1fr;
}
